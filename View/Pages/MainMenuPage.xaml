<Page x:Class="RomanNumeralRecognitionSystem.View.Pages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:hamburgerMenu="clr-namespace:HamburgerMenu;assembly=HamburgerMenu"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:local="clr-namespace:RomanNumeralRecognitionSystem.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPage">

    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <hamburgerMenu:HamburgerMenu
            Grid.Column="0"
            Style="{StaticResource MainMenuStyle}">
            <hamburgerMenu:HamburgerMenuItem Text="Обучение" Icon="{Binding Source={iconPacks:BoxIcons Kind=LogosAdobe}, Converter={iconPacks:PackIconFontAwesomeKindToImageConverter Brush=Crimson}}"/>
        </hamburgerMenu:HamburgerMenu>
    </Grid>
</Page>
