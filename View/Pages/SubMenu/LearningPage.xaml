<Page x:Class="RomanNumeralRecognitionSystem.View.Pages.SubMenu.LearningPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RomanNumeralRecognitionSystem.View.Pages.SubMenu"
      xmlns:viewModel="clr-namespace:RomanNumeralRecognitionSystem.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LearningPage"
      DataContext="{Binding Source={x:Static viewModel:NerualNetworkViewModel.Instance}}">

    <Grid Background="WhiteSmoke"
          >
        <Label FontSize="50"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               Content="{Binding NerualNetwork.HiddenLayersList.Count}"/>
    </Grid>
</Page>
